<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" xmlns:styles="styles.*" creationComplete="setMiddlePoint()">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.SkinnableContainer")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<fx:Declarations>
		<styles:GraphicsLib id="graphicLib"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			private var _middlePoint:Number;
			private var forCompiler:SpeechBubbleSkin;
			
			private function setMiddlePoint():void{
				_middlePoint = this.width/2.0;
			}

		]]>
	</fx:Script>
	
	<s:Path x="100" y="0" filters="{[graphicLib.getDropShadowFilter()]}"
	data = "	M 0 0
	L 50 50
	L 0 50
	L 0 0 ">
	<s:fill>
	<s:LinearGradient rotation="90">
	<s:GradientEntry color="#333333"/>
	<s:GradientEntry color="#333333"/>
	</s:LinearGradient>
	</s:fill>
	
	</s:Path>
	
	<s:Rect y="45" width="95%" height="300" radiusX="10" radiusY="10" horizontalCenter="0">
		<s:fill>
			<s:LinearGradient>
				<s:GradientEntry color="#333333"/>
				<s:GradientEntry color="#333333"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Group id="contentGroup" top="90" left="34" right="34 " bottom="10" fontSize="16" color="#ffffff"/>
	
	<!-- SkinParts
	name=contentGroup, type=spark.components.Group, required=false
	-->
	
</s:Skin>
