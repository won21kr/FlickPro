<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:styles="styles.*"
				autoDrawBackground="false" contentBackgroundAlpha="0" 
				>
	<fx:Declarations>
		<styles:GraphicsLib id="graphicLib"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import VOs.PhotoVO;
			import com.squidzoo.eventSystem.EventCentral;
			import com.squidzoo.eventSystem.events.CustomDataEvent;
			import com.squidzoo.eventSystem.events.CustomEvent;
			
			private var _data:PhotoVO;
			
			override public function set data(value:Object):void{
				_data = (value as PhotoVO);
				photo.source = value.image;
			}
			
			private function onClickImage():void{
				EventCentral.getInstance().dispatchEvent(new CustomDataEvent(CustomDataEvent.IMAGE_IN_LIST_CLICKED,null,null,null,null,_data));
			}
			
		]]>
	</fx:Script>
	
	<s:Rect width="100" height="100"
			filters="{[graphicLib.getDropShadowFilter()]}">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xffffff"/>
				<s:GradientEntry color="0xffffff"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Image id="photo" enableLoadingState="true"
				   maxWidth="180" maxHeight="150" verticalCenter="0" horizontalCenter="0" click="onClickImage()"/>
	
</s:ItemRenderer>