<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				autoDrawBackground="false"
				contentBackgroundAlpha="0" 
				width="300"
				height="80"
				creationComplete="creationCompleteHandler(event)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import VOs.SizeVO;
			import VOs.TagVO;
			
			import com.chewtinfoil.utils.StringUtils;
			import com.squidzoo.eventSystem.EventCentral;
			import com.squidzoo.eventSystem.events.CustomDataEvent;
			
			import mx.events.FlexEvent;
			
			[Bindable]private var _theHeight:int;
			[Bindable]private var _theWidth:int;
			[Bindable]private var _theLabel:String;
			private var _sizeVO:SizeVO;
			
			private function creationCompleteHandler(event:FlexEvent):void
			{
				_sizeVO = (data as SizeVO);
				
				_theHeight = _sizeVO.height;
				_theWidth = _sizeVO.width;
				_theLabel = _sizeVO.label;
				
				this.addEventListener(MouseEvent.CLICK,onClick);
			}
			
			protected function onClick(event:MouseEvent):void
			{
				EventCentral.getInstance().dispatchEvent(new CustomDataEvent(CustomDataEvent.SIZE_SELECTED,null,null,null,null,null,null,0,null,null,_sizeVO));
			}
			
		]]>
	</fx:Script>
	
	
	<s:SkinnableContainer skinClass="skins.TagIRSkin" width="100%" height="100%">
		<s:HGroup>
			<s:Label text="{_theLabel}" color="#ffffff" fontSize="24"/>
			<s:Label x="180" text="{_theWidth} x {_theHeight}" color="#ffffff" fontSize="20"/>
		</s:HGroup>
	</s:SkinnableContainer>
	
</s:ItemRenderer>
