<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				height="150">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup top="5" gap="5">
		<s:BitmapImage id="image" source="{data.thumbnail}" />
		<s:Label id="uploadStatusLabel" text="status"/>
		<s:Label id="uploadStatusValue" text="{data.uploadStatus}" color="0xff0000" fontSize="18"/>
		
		<s:Label id="percentageUploaded" text="% uploaded {data.uploadPercentage}" color="0x00ff00" fontSize="18"/>
		<s:Image id="progressBar" source="{data.progressBar}" />
	</s:VGroup>
</s:ItemRenderer>
