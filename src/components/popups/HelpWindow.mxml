<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark" width="350" height="100%"
						  	contentBackgroundAlpha="0"
							skinClass="skins.HelpWindowInvisibleSkin"
						   creationComplete="init()">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
		
			[Bindable]private var _rowAC:ArrayCollection = new ArrayCollection(); 
			
			import com.squidzoo.eventSystem.EventCentral;
			import com.squidzoo.eventSystem.events.CustomEvent;
			
			import spark.components.View;
			private var activeView:View;
			import mx.core.FlexGlobals;
			
			public function show():void{
				activeView = FlexGlobals.topLevelApplication.navigator.activeView;
				this.center();
				this.open(activeView,true);		
			}
			
			public function center():void{
				this.width = 350;//activeView.width * 0.7;
				this.height = activeView.height * 0.6;//old value 270
				
				var newX:Number = (activeView.width / 2) - (this.width /2);
				var newY:Number = 240;//(activeView.height / 2) - (this.height/2);
				
				this.x = newX;
				this.y = newY;
			}
			
			private function init():void{
				this.addEventListener(MouseEvent.CLICK,onTap);
			}
			
			private function onTap(event:MouseEvent):void{
				this.close();
			}
			
			public function set content(ac:ArrayCollection):void{
				_rowAC = ac;
			}
		]]>
	</fx:Script>
	<s:SkinnableContainer width="100%" height="100%" skinClass="skins.HelpWindowSkin" contentBackgroundAlpha="0">		
		<s:VGroup width="100%" height="100%" verticalAlign="middle">		
			
			<s:DataGroup width="100%" height="100%" dataProvider="{_rowAC}" itemRenderer="ItemRenderers.HelpWindowItemRenderer" contentBackgroundAlpha="0">
				<s:layout>
					<s:VerticalLayout/>
				</s:layout>
			</s:DataGroup>		
			
			<s:VGroup>			
				<s:Label width="100%" height="100%" text="Tap to close" fontSize="22" fontWeight="bold" horizontalCenter="0" color="#000000"/>
			</s:VGroup>
			
		</s:VGroup>
	</s:SkinnableContainer>
	
</s:SkinnablePopUpContainer>
