<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark"
						   x="70" y="300">
	
	<fx:Declarations>
		<s:RadioButtonGroup id="privacySetting" 
							itemClick="onClick(event);"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.squidzoo.eventSystem.EventCentral;
			import com.squidzoo.eventSystem.events.CustomDataEvent;
			
			import mx.core.FlexGlobals;
			import mx.events.ItemClickEvent;
			
			import spark.components.View;

			private var activeView:View;
			
			public function show():void{
				activeView = FlexGlobals.topLevelApplication.navigator.activeView;//FlexGlobals.topLevelApplication.viewNavigator.activeView;
				this.center();
				this.open(activeView, true);		
			}
			
			public function center():void{
				this.width = 200; //activeView.width * 0.7;
				this.height = 200; //activeView.height * 0.6;
				
				var newX:Number = (activeView.width / 2) - (this.width /2);
				var newY:Number = (activeView.height / 2) - (this.height/2);
				
				this.x = newX;
				this.y = newY;
			}
			
			private function onClick(event:ItemClickEvent):void {
				EventCentral.getInstance().dispatchEvent(
					new CustomDataEvent(CustomDataEvent.PRIVACY_SETTINGS,null,null,event.currentTarget.selectedValue));
				this.close();
			}
		]]>
	</fx:Script>	
	
	<s:VGroup verticalCenter="0" horizontalCenter="0">	
			<s:RadioButton id="familyValue" group="{privacySetting}" value="family" label="private"/>
			<s:RadioButton id="friendValue" group="{privacySetting}" value="friend" label="friend"/>
			<s:RadioButton id="publicValue" group="{privacySetting}" value="public" label="public"/>
	</s:VGroup>
	
</s:SkinnablePopUpContainer>