<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark"
						    x="70" y="300" backgroundAlpha="0">
	
	<fx:Script>
		<![CDATA[
			import com.squidzoo.eventSystem.EventCentral;
			import com.squidzoo.eventSystem.events.CustomEvent;
			
			import spark.components.View;
			private var activeView:View;
			import mx.core.FlexGlobals;
				
			public function show():void{
					activeView = FlexGlobals.topLevelApplication.navigator.activeView;//FlexGlobals.topLevelApplication.viewNavigator.activeView;
					this.center();
					this.open(activeView, true);		
			}
				
			public function center():void{
					this.width = 214; //activeView.width * 0.7;
					this.height = 337; //activeView.height * 0.6;//old value 270
					
					var newX:Number = (activeView.width / 2) - (this.width /2);
					var newY:Number = (activeView.height / 2) - (this.height/2);
					
					this.x = newX;
					this.y = newY;
			}
			
			private function onClick(event:MouseEvent):void{
				
				switch(event.target.id){
					case "upload":
						EventCentral.getInstance().dispatchEvent(new CustomEvent(CustomEvent.ACTIONBAR_MENU_ICON_CLICKED_UPLOAD));
						break;
					case "browseSets":
						EventCentral.getInstance().dispatchEvent(new CustomEvent(CustomEvent.ACTIONBAR_MENU_ICON_CLICKED_BROWSE_SETS));
						break;
					case "stream":
						EventCentral.getInstance().dispatchEvent(new CustomEvent(CustomEvent.ACTIONBAR_MENU_ICON_CLICKED_PHOTOSTREAM));
						break;
					case "search" :
						EventCentral.getInstance().dispatchEvent(new CustomEvent(CustomEvent.ACTIONBAR_MENU_ICON_CLICKED_SEARCH));
				}
				
				this.close();
			}
		]]>
	</fx:Script>	
	
	<!-- Also uses the MyPopupSkin.mxml class -->
	<s:SkinnableContainer skinClass="skins.BlueBoxRoundCornersSkin">		
		<s:Button x="5" y="5" id="upload" label="upload" click="onClick(event)" skinClass="components.MenuUploadButtonSkin"/>
		<s:Button x="5" y="74" id="browseSets" label="browseSets" click="onClick(event)" skinClass="components.MenuSetsButtonSkin"/>
		<s:Button x="5" y="143" id="stream" label="stream" click="onClick(event)" skinClass="components.MenuStreamButtonSkin"/>
		<s:Button x="5" y="212" id="search" label="search" click="onClick(event)" skinClass="components.MenuSearchButtonSkin"/>
		<s:Button x="159" y="281" label="Close" click="this.close()"/>
	</s:SkinnableContainer>
	
</s:SkinnablePopUpContainer>
